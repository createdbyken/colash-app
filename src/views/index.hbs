<div class="card-panel br-8 border-outline">
  <form action="/images" method="POST" enctype="multipart/form-data"  autocomplete="off">

    <div class="form-group">
      <div class="input-group">
        <div class="custom-file">
          <input type="file" name="image" class="custom-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon" required/>
          <label class="custom-file-label" for="inputGroupFile">Choose file</label>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="">
        <div class="input-field ">
          <input type="text" name="title" class="validate" placeholder="Title for the Image" required>
        </div>
      </div>

      <div class="input-field">
        <textarea name="description" id="textarea1" class="materialize-textarea" placeholder="Description" required></textarea>
      </div>

      <div class="form-group">
        <button style="background-color: transparent; border: none;">
          <a class="waves-effect waves-light btn grey darken-4 hoverable br-5">
            <i class="material-icons left">cloud_done</i>Subir
          </a>
        </button>
      </div>
    </div>

  </form>
</div>



<div class="section">
  <div class="row">
    {{#each images}}
      <div class="col l12">        
        <div class="card-panel">
          <a href="/images/{{uniqueId}}">
            <img class="responsive-img" src="/public/upload/{{filename}}" alt="">
          </a>
        </div>  
      </div>
    {{/each}}
  </div>
</div>
            